        <Image x:Name="displayImg15" HorizontalAlignment="Left" Height="133" Margin="1028,303,0,0" VerticalAlignment="Top" Width="134" PointerPressed="img15_press" PointerReleased="img15_reles"/>
        <Image x:Name="displayImg16" HorizontalAlignment="Left" Height="133" Margin="1028,303,0,0" VerticalAlignment="Top" Width="134" PointerPressed="img16_press" PointerReleased="img16_reles"/>
        <Image x:Name="displayImg17" HorizontalAlignment="Left" Height="133" Margin="1028,303,0,0" VerticalAlignment="Top" Width="134" PointerPressed="img17_press" PointerReleased="img17_reles"/>
